{{>navegacion}}
<div class="encabezado"><h1>Alta de Usuarios</h1></div>
    <div>
        <div class="container">
                <h3 class="text-center text-light">Alta de Usuario</h3>
            <div class="row  justify-content-center align-items-center">
                <div class="col-sm-4">
                    <form class=" pt-5" action="/user/usuarioAlta" method="post">

                        <div class="col-auto">
            
                                <div class="col-auto">
                                    <label class="form-label text-light" for="">Nombre</label>
                                    <input name="nombre" class="form-control" type="text">
                                </div>

                                <div class="col-auto">
                                    <label class="form-label text-light" for="">Apellido</label>
                                    <input name="apellido" class="form-control" type="text">
                                </div>
            
                            <div class="col-auto">
                                <label class="col-md-5 text-light" for="">Area</label>
                                <select class="form-control col-md-4" name="area">
                                    <option value="null" selected>Seleccionar</option>
                                    <option value="1">Sistema</option>
                                    <option value="2">Contable</option>
                                    <option value="3">Legales</option>
                                    <option value="4">Tramites</option>
                                    <option value="5">Atencion al Publico</option>
                                    <option value="6">Recursos Humanos</option>
                                    <option value="7">Personal Limpieza</option>
                                    <option value="8">Logistica</option>
                                    <option value="9">Ni単ez</option>
                                    <option value="10">Relaciones Publicas</option>
                                    <option value="11">Despacho</option>
                                </select>
                            </div>
                            
                            <div class="col-auto">
                                <label class="col-md-5 text-light" for="">Rol</label>
                                <select class="form-control col-md-4" name="rol">
                                    <option value="null" selected>Seleccionar</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Contables</option>
                                    <option value="3">Defensor</option>
                                    <option value="4">Empleado</option>
                                    <option value="5">Responsable</option>
                                </select>
                            </div>            
                            <div class="col-auto">
                                <label class="col-md-5 text-light" for="">Usuario</label>
                                <input name="username"  minlength="7" maxlength="8" class="form-control col-md-4" type="text">
                            </div>
            
                            <div class="col-auto">
                                <!-- Poner campo contrase単a en BD -->
                                <label class="col-md-5 text-light" for="">Contrase単a</label>
                                <input name="password" class="form-control col-md-4" type="password">
                            </div>
            
                            <div class="col-auto" hidden>
                                <label class="text-light" for="">Confirmar contrase単a</label>
                                <input class="form-control col-md-4" type="password">
                            </div>
                            <!-- botones -->
                            <div class="pb-5">
                                <button class="btn btn-dark mt-4 me-3">Cancelar</button>
                                <button type="submit" class="btn btn-dark mt-4 ms-auto">Confirmar</button>
            
                            </div>

                        </div>
            
                    </form>
                </div>
            </div>


        </div>

    </div>
