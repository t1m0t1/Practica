    <div class="ms-4 me-4">

          <div class="mt-5 mb-4  ">
<div class="tb-tools">
             <button class="btn btn-dark mt-5 mb-4" id="btnTabla" onclick="MostrarOcultar()">Mostrar</button>
                                             <!-- Tabla -->


    <div class="container-fluid" id="dv-table" hidden>
        <div class="row">
            <div class="col" >
                        <!-- Tabla -->
                                <table id="myTable" class="table table-secondary table-striped">
                    <thead>
                        <tr class="table-dark bg-gradient ">

                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Categoria</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">Sector</th>
                        <th scope="col">Punto de Reposicion</th>
                        </tr>
                    </thead>

                    {{>tabla}}

                    </table>
            </div>
        </div>
    </div>
                                     </div >
                </div>
    </div>
<script>
    function MostrarOcultar(){
    let boton = document.getElementById("btnTabla");
    let tabla = document.getElementById("dv-table");
    
    

    if(tabla.hidden){
        tabla.hidden = false;

        boton.innerHTML="Ocultar"
    }else{
        tabla.hidden = true;
        boton.innerHTML="Mostrar"
    }
}
</script>
